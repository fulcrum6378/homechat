<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="10dip"
            android:paddingBottom="5dip">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="42dip"
                android:layout_height="42dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dip"
                android:src="@drawable/computer" />

            <TextView
                android:id="@+id/host"
                style="@style/ListTextTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_above="@id/mac"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/logo"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="0.0.0.0" />

            <TextView
                android:id="@+id/mac"
                style="@style/ListTextSummary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_above="@+id/vendor"
                android:layout_toEndOf="@+id/logo"
                android:text="00:00:00:00:00:00" />

            <TextView
                android:id="@+id/vendor"
                style="@style/ListTextSummary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/logo"
                android:text="NIC Vendor" />

            <Button
                android:id="@+id/btn_back"
                style="@style/ButtonTop"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/back"
                android:drawablePadding="5dip"
                android:text="@string/btn_back" />

            <Button
                android:id="@+id/btn_scan"
                style="@style/ButtonTop"
                android:layout_width="wrap_content"
                android:layout_toStartOf="@id/btn_back"
                android:drawableStart="@drawable/discover"
                android:drawablePadding="5dip"
                android:text="@string/btn_scan" />
        </RelativeLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:paddingTop="5dip">

            <ListView
                android:id="@+id/list_open"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <ListView
                android:id="@+id/list_closed"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>
    </LinearLayout>
</TabHost>