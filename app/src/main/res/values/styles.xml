<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="parentConstraint">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <!-- #TextAppearance -->
    <style name="TextAppearance.HomeChat.Regular" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="TextAppearance.HomeChat.Bold" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/largeText</item>
    </style>

    <style name="TextAppearance.HomeChat.Light" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="TextAppearance.HomeChat.Italic" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>
</resources>