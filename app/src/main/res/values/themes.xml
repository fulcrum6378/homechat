<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HomeChat.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#900081</item>
        <item name="colorPrimaryVariant">#900081</item>
        <item name="colorOnPrimary">?colorPrimary</item>
        <item name="colorSecondary">#FFF</item>
        <item name="colorSecondaryVariant">#FFF</item>
        <item name="colorOnSecondary">?colorSecondary</item>

        <item name="android:navigationBarColor">?android:windowBackground</item>
        <item name="android:statusBarColor">?android:windowBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.HomeChat.Regular</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.HomeChat.Regular</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.HomeChat.Regular</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.HomeChat.Bold</item>
        <item name="colorControlNormal">?android:textColor</item><!--drawerToggle-->
        <item name="itemRippleColor">#33900081</item>
        <item name="navigationViewStyle">@style/Widget.HomeChat.NavigationView</item>
        <item name="titleTextColor">?android:textColor</item><!--toolbar-->
    </style>

    <style name="Theme.HomeChat" parent="Theme.HomeChat.Base">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Widget.HomeChat.NavigationView" parent="Widget.Material3.NavigationView">
        <!--<item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>-->
        <item name="itemShapeFillColor">@color/nav_item_bg</item>
    </style>
</resources>