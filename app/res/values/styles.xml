<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="parentConstraint">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/shadow</item>
    </style>


    <!-- #TextAppearance -->
    <style name="TextAppearance.HomeChat.Nav" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/navItemsText</item>
    </style>

    <style name="TextAppearance.HomeChat.Toolbar.Title" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/toolbarTitle</item>
    </style>

    <style name="TextAppearance.HomeChat.Toolbar.Subtitle" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/toolbarSubtitle</item>
    </style>

    <style name="TextAppearance.HomeChat.Popup" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/popupText</item>
    </style>
</resources>